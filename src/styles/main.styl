    width 100%
    height 150px
  .btn
    float right
    margin 15px
    color #2980b9
    font-size 19px
    text-transform: uppercase
    font-weight 500
  p
    margin 15px
    color rgba(0,0,0,0.87)
  pre
    background-color white
    border none

.c-for-reserv
  font-weight 800
  color green

.monofont-ta
  font-family Menlo, Monaco, Consolas, "Courier New", monospace
  font-size 13px !important
  height 70vh

.backwhite
  background-color white

.dis-user-select
  -webkit-user-select none
  user-select none
  -moz-user-select none
  -ms-user-select none

.dis-display
  display none !important

.greyHover
  &:hover
    background-color #e7e7e7 !important

.custom-datetime
  display inline-block !important
  width 80% !important

.redHover
  &:hover
    color #C62E3E !important

.t-a-right
  text-align right

.middle-th
  line-height 4
  font-family Fredoka One, cursive
  font-size 14px
  &:hover
    background-color inherit

.n-a-cursor
  cursor not-allowed

.c-disable-href
  pointer-events none
  opacity 0.8

.fa-press-hover
  &:hover
    opacity 0.7 !important

.for_rava
  @media screen and (min-width: 1900px) {
    margin-left 16.67% !important
    width 66.67% !important
  }

.for_small_screen
  @media screen and (max-height: 800px) {
    height 600px !important
  }
